.info-slider
    .slick-list
        margin 0 30px
    .slick-next, .slick-prev
        font-size 0
        position absolute
        top 40%
        // top calc(50% - 21.5px)
        z-index 10
        background-color transparent
        border none
        height 30px
        width 30px
        cursor pointer
        &:focus
            outline none
        &:hover
            opacity .5
    .slick-prev
        left 0px
        background url('../images/left.png') no-repeat center center
    
    .slick-next
        right 0px
         
        background url('../images/right.png') no-repeat center center
        
    .img-wrapper
        width 381px 
        overflow hidden
        height 100%
        cursor grab
        
        &:nth-child(2n + 2)
            margin 0 12.5px
        &__img
            width 100%
            height auto
@media(max-width 1199px)
    .info-slider
        .img-wrapper
            width 290px
@media(max-width 960px)
    .info-slider
        .img-wrapper
            width 330px
@media(max-width 720px)
    .info-slider
        .img-wrapper
            width 400px
@media(max-width 480px)
    .info-slider
        .img-wrapper
            width 267px
