.services-card
    display block
    width 20%
    float left
    margin 0 2.5%
    height 368px
    border-bottom 3px solid $red
    &:first-child
        margin-left 0
    &:last-child
        
        margin-right 0

    .img-wrapper
        width 100%
        height 53%
        position relative
        overflow hidden
        &__img
            position absolute
            display block
            left 50%
            transform translateX(-50%)
            height 100%
    .text
        height 47%
        text-align left
        padding 18px 15px
        position relative
        transition .2s linear all
        &__title
            color $red
            overflow hidden
            text-transform uppercase
            font-size 15px 
            font-family TitilliumWeb-Bold
            margin-bottom 12px
            height 45px
        &__content
            font-size 14px
            font-family TitilliumWeb-Light
            line-height 24px
            height 78px
            overflow hidden
        
        &:hover 
            background-color $red
        &:hover .text__title, &:hover .text__content
            color #fff
        &:before
            top -20px
            transition .2s linear visibility 
            content ''
            visibility hidden
    .text:hover 
        &:before 
            position absolute
            visibility visible
            top -20px
            z-index 5
            left 50%
            transform translateX(-50%)
            border-bottom 10px solid $red
            border-left 10px solid transparent
            border-right 10px solid transparent
            border-top 10px solid transparent
            
@media(max-width 1199px)
    .services-card
        width 22%
        margin 0 1.5%
        
        
@media(max-width 960px)
    .services-card
        width 48%
        margin 10px 2%
        &:nth-child(2n + 1)
            margin-left 0 
        &:nth-child(2n + 2)
            margin-right 0
        .img-wrapper
            &__img
                width 100%
                height auto
            
            
            
@media(max-width 480px)
    .services-card
        width 100%
        margin 10px auto !important
            
        
            