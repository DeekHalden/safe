.reasons-container
    float left
    width 50%
    &__title
        color $blue
        width 415px
        font-size 46px
        font-family TitilliumWeb-Bold
        text-transform uppercase
        margin-bottom 78px
        &--styled
            color $red
    .reasons-row
        display flex
        flex-wrap wrap
        justify-content space-between
        @import '../reason-card/reason-card'

@media(max-width 1199px)
    .reasons-container
        width 100%
        &__title
            width 100%
            text-align center
            font-size 24px