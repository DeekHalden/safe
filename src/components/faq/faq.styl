@import '../stay-in-touch/stay-in-touch'

.faq
    position relative

.naming
    font-size 30px
    font-family TitilliumWeb-Bold
    margin-bottom 34px
    text-transform uppercase
    color $blue
    text-align center

.faq__content
    padding 80px 0 
    color #1c3051
    font-size 14px
    font-family TitilliumWeb-Bold
    font-size 14px
    

.faq__block,
.faq__question
    width 100%

.faq__question
    margin-bottom 18px

.icon-toggle-wrapper,
.icon-close-wrapper
    color $blue
    position absolute
    display block    
    cursor pointer
    top 40%
    top calc(50% - 6px)
    right 19px
    font-size 12px
    &__text
        font-family TitilliumWeb-Bold !important
        
    &:hover 
        color #fff
    .icon-close, .icon-toggle
        display inline-block
        vertical-align middle
        margin-left 5px
        color $red
.icon-close-wrapper
    color #fff
    display none

.faq__qw
    position relative
    cursor pointer
    border-bottom 2px solid rgba(39, 44, 102, 0.33)
    border-top 2px solid rgba(39, 44, 102, 0.33)
    padding 19px 140px 19px 19px
    margin-top 1px
    text-transform uppercase
    background-color #dee7ee
    border-radius 0px
    &:hover
        color #fff
        background-color rgba(39, 44, 102, 0.33)
    
.faq__qw-bold
    background-color $blue
    color #fff
    border-radius 5px

.faq__answer
    display none
    margin-left 10px
    padding 18px 0 18px 10px
    margin-bottom 18px

.faq__text
    font-family TitilliumWeb-Light
    padding-left 35px
    line-height 1.8
    position relative
    z-index 1
    color $blue
    font-size 14px

@media(max-width 1199px)
    
    .faq
        padding 10px 0
    .faq__content
        padding-top 0px
        padding-bottom 20px
    .faq__qw
        padding 8px 30px 8px 8px
    
    .icon-toggle-wrapper,
    .icon-close-wrapper
        &__text
            display none
    .faq__answer
        padding-left 10px
    .faq__text
        padding-left 10px
    .naming
        font-size 30px
