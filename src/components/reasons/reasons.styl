.reasons-comparison
    margin-bottom 40px
    background url('../images/flag-bg.png') no-repeat center
    background-size cover
    padding 144px 0
    .reasons-comparison-container
        &__title
            text-align center
            text-transform uppercase
            font-size 46px
            font-family Montserrat-Bold
            color #fff
            margin-bottom 57px
        .reasons-comparison-row
            display flex
            justify-content center
            flex-wrap wrap
            text-align center
@media(max-width 1199px)
    .reasons-comparison
        padding 40px 0 
        .reasons-comparison-container
            &__title
                margin-bottom 20px
@media(max-width 720px)
    .reasons-comparison
        .reasons-comparison-container
            &__title
                font-size 30px
    
    
@import '../reason-data/reason-data'