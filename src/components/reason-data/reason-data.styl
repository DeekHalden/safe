.datepickers-container
    z-index 1123
#top-form-popup
    .mfp-close
        color #fff
    .popup-form
        @extends .top-form
        width 100%
        padding-top 20px
        float none
        
        &__dismiss
            display none
        .second-step
            display block
        .input-group
            .action-btn--submit
                display block
                width 180px
                
@media(max-width 480px)
    #top-form-popup
        .popup-form
            .input-group
                width 100%
                height auto
                &__label,.form-control
                    position static
                    
     
.reason-item
    font-family TitilliumWeb-Regular
    background url('../images/reason-card.png') no-repeat center center
    width  480px
    background-size 100% 100%
    display inline-block
    margin 20px
    padding 41px 0 80px
    position relative
    &--less
        .cost-p-hour, .total-info
            color $blue
        .badge
            background-color $blue
            &:hover
                background-color #0317f9
    &--more
        .cost-p-hour, .total-info
            color $red
        .total-info
            margin-bottom 20px 
        .badge
            background-color #ff3030
            &:hover
                background-color $red
        .conclusion
            display none !important
            
                
    .badge
        text-decoration none
        position absolute
        bottom  -0px
        left 50%
        transform translateX(-50%)
        width 191px
        padding 14px 0
        text-transform uppercase
        color #fff
        box-shadow 0px 8px 26.1px 2.9px rgba(0, 0, 0, 0.33)
        border-radius 5px
        font-size 15px
        font-family TitilliumWeb-Regular
    .img-wrapper
        display inline-block
        margin-top 20px
        margin-right 30px
        width 129px
        &__img
            display block
            width 100%
    .cost-p-hour
        display inline-block
        vertical-align top
        font-family TitilliumWeb-Bold
        
        font-size 18px
        text-transform uppercase
        margin-left 30px
        text-align left
    .table
        text-align left
        width 285px
        margin 41px  auto 20px
        border-spacing 0px
        border-collapse collapse
        .table-row
            margin 10px 0
            &:nth-child(odd)
                background-color #e1e1e1
            td
                padding 5px 
                
            &__first
                font-family TitilliumWeb-Regular
                font-size 14px
                color #272c66
            &__last
                font-size 14px
                font-family TitilliumWeb-Regular
                color #272c66
                padding 0 !important
    .total-info
        text-transform uppercase
        
        font-family TitilliumWeb-Bold
        font-size 32px
    .conclusion
        font-size 15.73px
        font-family TitilliumWeb-Regular
        text-transform uppercase
        color #272c66
        &__styled
            font-family TitilliumWeb-Bold
            
.dialog
    color #fff
    background-color $blue
    border-radius 10px
    a
        color #fff
    .mfp-close
        color #fff !important
        &:hover 
            color $red !important
        

@media(max-width 720px)
    .reason-item
        width 101%
        margin-left -20px
        margin-right -20px
        .img-wrapper
            margin-right 10px
        .cost-p-hour
            margin-left 10px
        .table
            width 80%
        .total-info
            font-size 1.5em
        .conclusion
            font-size .8em
@media(max-width 380px)
    .reason-item
        width 100%
        
            