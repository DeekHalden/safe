.wrapper-404
    // background-size cover
    // height 100vh
    // min-height 1000px
    .footer-wrapper
        position absolute
        bottom 0
        left 0
        z-index 5
.not-found-container
    margin-top 110px
    height 100vh
    min-height 560px
    
    
    background url('./../images/couple-404.png') no-repeat center
    background-size cover

.not-found-wrapper
    position absolute
    left 50%
    transform translateX(-50%)
    top 0
    bottom 0
    .img-wrapper
        display inline-block
        &__img
            max-width 100%
            height auto
    .text
        vertical-align top
        display inline-block
        text-align left
        color $blue
        margin-top 40px
        margin-right 70px
        .title
            font-size 106px
            font-family TitilliumWeb-Thin
            &__styled
                font-family TitilliumWeb-Regular
                
        &__subtitle
            font-size 28px
            font-family TitilliumWeb-Regular
            text-transform uppercase
        .btn-group
            display inline-block
            margin-top 34px
            &__btn
                margin-top 10px
                text-align center
                display inline-block
                color #fff
                border-radius 5px
                font-family TitilliumWeb-Bold
                font-size 15px
                width 191px
                padding 15px 0
                text-decoration none
                & + .btn-group__btn 
                    margin-left 27px
                &--home
                    background-color $red
                    &:hover
                        background-color #ff0c00
                        
                &--contact
                    background-color $blue
                    &:hover
                        background-color #0014ff
@media(max-width 1199px)
    .not-found-container
        background-position 65% center
        margin-top 50px
    .not-found-wrapper
        padding 100px 0 0px
        .text
            margin-top 70px
            margin-right 0
            text-align center
            .title
                font-size 35px
            &__subtitle
                font-size 18px
            
    
@media(max-width 960px)
    .not-found-wrapper
        .text
            margin-top 20px
            .title, &__subtitle
                text-shadow 0 1px $red
@media(max-width 720px)
    .not-found-wrapper
        padding-top 150px
    .not-found-container
        background none
        
        .text
            display block
            margin 0 auto
@media(max-width 480px)
    .not-found-container
        height auto
    .wrapper-404
        min-height 650px
    .not-found-wrapper
        padding-top 40px
        .text
            margin-top 20px
            .btn-group
                &__btn
                    margin-left 0 !important